<div class="row">
    <div class="col-xs-offset-2 col-xs-8 col-xs-offset-2 card-container">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-2">
                        <img src="http://via.placeholder.com/60x60"></img>
                    </div>

                    <div class="col-xs-10">
                        <div class="row">
                            <div class="col-xs-12 tweet-username">
                                {{ tweet.user.fullname }} @{{ tweet.user.handle }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 tweet-message">
                                {{ tweet.message }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
